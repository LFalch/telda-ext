{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Telda",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#registers"
        },
        {
            "include": "#labels"
        },
        {
            "include": "#instructions"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#chars"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "name": "comment.line.number-sign.telda",
                "match": "^\\s*(#|\/\/|;).*$"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.other.telda",
                "match": "\\b_start\\b"
            }]
        },
        "directives": {
            "patterns": [{
                "name": "keyword.other.telda",
                "match": "^\\s*\\.\\w+\\b"
            }]
        },
        "registers": {
            "patterns": [{
                "name": "variable.parameter.telda",
                "match": "\\b(\\$\\w+|a|al|ah|b|bl|bh|c|cl|ch|io|x|y|z|s)\\b"
            }]
        },
        "labels": {
            "patterns": [{
                "name": "entity.name.section.telda",
                "match": "^.*:\\s"
            }] 
        },
        "instructions": {
            "patterns": [{
                "name": "entity.name.function.telda",
                "match": "^\\s*(\\w+)\\s"
            }] 
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric.telda",
                "match": "\\b(0x[0-9a-zA-Z]{1,4}|\\d+(b|w)?)\\b"
            }] 
        },
        "strings": {
            "name": "string.quoted.double.telda",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.telda",
                    "match": "\\\\."
                }
            ]
        },
        "chars": {
            "name": "string.quoted.single.telda",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape.telda",
                    "match": "\\\\."
                }
            ]
        }
    },
    "scopeName": "source.telda"
}